{
  "expo": {
    "version": "0.28.5",
    "name": "Language Dex",
    "slug": "language-dex",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "myapp",
    "newArchEnabled": true,
    "ios": {
      "bundleIdentifier": "dev.arthurcose.languagedex",
      "supportsTablet": true
    },
    "android": {
      "package": "dev.arthurcose.languagedex.dev",
      "versionCode": 51,
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#aa33ff"
      },
      "softwareKeyboardLayoutMode": "resize",
      "blockedPermissions": ["com.google.android.gms.permission.AD_ID"]
    },
    "androidStatusBar": {
      "translucent": true
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-build-properties",
        {
          "android": {
            "compileSdkVersion": 35,
            "targetSdkVersion": 35,
            "buildToolsVersion": "35.0.0"
          }
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#aa33ff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      "expo-localization",
      "expo-sqlite",
      "expo-audio",
      "expo-font"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
